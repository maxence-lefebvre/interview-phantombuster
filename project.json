{
  "name": "phantombuster",
  "$schema": "node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "./src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nx/vite:build",
      "outputs": ["{options.outputPath}"],
      "defaultConfiguration": "production",
      "options": {
        "outputPath": "dist/phantombuster"
      },
      "configurations": {
        "development": {
          "mode": "development"
        },
        "production": {
          "mode": "production",
          "base": "/interview-phantombuster/"
        }
      }
    },
    "serve": {
      "executor": "@nx/vite:dev-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "phantombuster:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "phantombuster:build:development",
          "hmr": true
        },
        "production": {
          "buildTarget": "phantombuster:build:production",
          "hmr": false
        }
      }
    },
    "preview": {
      "executor": "@nx/vite:preview-server",
      "defaultConfiguration": "development",
      "options": {
        "buildTarget": "phantombuster:build"
      },
      "configurations": {
        "development": {
          "buildTarget": "phantombuster:build:development"
        },
        "production": {
          "buildTarget": "phantombuster:build:production"
        }
      }
    },
    "test": {
      "executor": "@nx/vite:test",
      "outputs": ["{options.reportsDirectory}"],
      "options": {
        "reportsDirectory": "coverage/phantombuster"
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["./src"]
      }
    },
    "serve-static": {
      "executor": "@nx/web:file-server",
      "options": {
        "buildTarget": "phantombuster:build"
      }
    },
    "deploy": {
      "dependsOn": ["build"],
      "executor": "nx:run-commands",
      "options": {
        "commands": [
          "gh-pages -d dist/phantombuster -m \"chore: deploy latest updates\""
        ]
      },
      "defaultConfiguration": "production"
    }
  },
  "tags": ["type:ui"]
}
